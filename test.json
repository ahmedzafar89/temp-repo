{
  "definition": {
    "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "triggers": {
      "When_a_file_is_added_or_modified_(properties_only)": {
        "type": "ApiConnection",
        "inputs": {
          "host": {
            "connection": {
              "name": "@parameters('$connections')['azureblob']['connectionId']"
            }
          },
          "method": "get",
          "path": "/datasets/default/triggers/batch/onupdatedfile",
          "queries": {
            "folderId": "/datasets/default/folders/@{encodeURIComponent(encodeURIComponent('<container-name>'))}",
            "interval": 300
          }
        },
        "recurrence": {
          "frequency": "Minute",
          "interval": 1
        }
      }
    },
    "actions": {
      "Get_blob_content": {
        "type": "ApiConnection",
        "inputs": {
          "host": {
            "connection": {
              "name": "@parameters('$connections')['azureblob']['connectionId']"
            }
          },
          "method": "get",
          "path": "/datasets/default/actions/files",
          "queries": {
            "folderId": "/datasets/default/folders/@{encodeURIComponent(encodeURIComponent('<container-name>'))}",
            "fileId": "/datasets/default/files/@{encodeURIComponent(encodeURIComponent('<file-path>'))}"
          }
        },
        "runAfter": {},
        "metadata": {
          "<metadata-key>": "<metadata-value>"
        }
      },
      "Check_if_file_exists": {
        "type": "Condition",
        "expression": "@empty(body('Get_blob_content'))"
      }
    },
    "outputs": {}
  }
}
